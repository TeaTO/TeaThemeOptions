{% set formAction = 'admin.php?page=' ~ currentPage ~ '&action=tea-to-action&for=settings' %}

<!-- Tea Theme Options -->
<div class="wrap tea-to-wrap">
    <!-- Menu block -->
    <nav class="tea-to-main-nav" role="navigation">
        <a href="admin.php?page={{ identifier }}" class="tea-to-logo">
            <object>{{ icon|raw }}</object> {{ t_tto_title }}
        </a>

        {% if identifier != currentPage %}
            <span class="tea-to-breadcrumb">
                <i class="fa fa-long-arrow-right fa-lg"></i> {{ title|raw }}
            </span>
        {% endif %}

        <a href="#menu" title="" class="tea-to-menu-resp"></a>

        <ul class="tea-to-menus">
            {% for link in breadcrumb %}
                {% set selected = link.slug == currentPage ? ' class="current"' : '' %}
                <li><a href="admin.php?page={{ link.slug }}"{{ selected|raw }}>{{ link.title|raw }}</a></li>
            {% endfor %}
        </ul>

        <a href="#close" title="" class="tea-to-fallback"></a>
    </nav>

    {% if notice %}
        <!-- Updated block -->
        {% for n in notice %}
            <div class="error below-h2 tea-to-{{ n[0] }} headsup">
                <p>{{ n[1]|raw }}</p>
            </div>
        {% endfor %}
    {% endif %}

    {% if description %}
        <!-- Description block -->
        <p class="tea-to-description">{{ description|raw }}</p>
    {% endif %}

    <!-- Main block -->
    {% if submit %}
        <form method="post" action="{{ formAction|raw }}" enctype="multipart/form-data" class="tea-to-form">
            <input type="hidden" name="updated" id="updated" value="true" />
    {% endif %}

        <div id="poststuff" class="tea-to-contents">
            <div id="post-body" class="metabox-holder">

                <!-- Content block -->
                <div id="post-body-content">
                    <!-- Content fields -->
                    {% for field in fields %}
                        {% set tpl = field.template %}
                        {% include tpl with field.vars %}
                    {% endfor %}

                    {% if submit %}
                        <!-- Content save -->
                        <div id="save_content">
                            <div class="inside">
                                <p class="submit">
                                    <input type="submit" name="submit" class="button button-primary" value="{{ t_tto_update|raw }}" />
                                </p>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="tea-to-clear"></div>
            </div>
        </div>

    {% if submit %}
        </form>
    {% endif %}

    <!-- Footer block -->
    <footer class="tea-to-footer">
        {% if urls.capabilities %}
            <ul>
                <li><a href="{{ urls.capabilities }}"><b>{{ t_tto_url_capabilities|raw }}</b></a></li>
                <li><a href="{{ urls.posttypes }}"><b>{{ t_tto_url_posttypes|raw }}</b></a></li>
                <li><a href="{{ urls.terms }}"><b>{{ t_tto_url_terms|raw }}</b></a></li>
            </ul>
        {% endif %}

        <hr/>

        <p>{{ t_tto_contact|raw }}</p>
        <p>{{ t_tto_copyright|raw }}</p>
        <p><small>{{ t_tto_version|raw }}</small><br/><small>{{ t_tto_quote|raw }}</small></p>
    </footer>

    <div class="tea-to-modal-backdrop"></div>
</div>
